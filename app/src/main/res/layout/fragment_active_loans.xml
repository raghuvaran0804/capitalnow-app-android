<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/login_page_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".kotlin.fragments.ActiveLoansFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLoans"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_10"
        android:layout_weight="9"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/llPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/llBreakUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="9"
            android:background="@drawable/single_rounded_square"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_15"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginEnd="@dimen/margin_15"
                android:visibility="gone">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:text="Amount Breakup"
                    android:textAppearance="@style/VerySmallText"
                    android:textColor="@color/intro_page_body_color"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvBreakUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@color/white"
                    android:backgroundTint="@color/colorDarkBlue"
                    android:gravity="center"
                    android:paddingStart="@dimen/margin_5"
                    android:paddingTop="3dp"
                    android:paddingEnd="@dimen/margin_5"
                    android:paddingBottom="3dp"
                    android:textAppearance="@style/VerySmallText"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_marginEnd="@dimen/margin_15"
                android:background="@color/light_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvBreakUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total Amount to be paid"
                android:textAppearance="@style/MicroText"
                android:textColor="@color/intro_page_body_color"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:paddingStart="@dimen/margin_5"
                android:paddingEnd="@dimen/margin_5"
                android:paddingBottom="3dp"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/colorBlackShade"
                android:textStyle="bold" />

        </LinearLayout>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/llButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_gradient"
            android:backgroundTint="@color/dark_gray"
            android:gravity="center"
            android:text="Pay Now"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNoLoanContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_40"
        android:layout_marginEnd="@dimen/margin_40"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_40"
            android:adjustViewBounds="true"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/black"
            android:textStyle="normal" />
    </LinearLayout>
</LinearLayout>