<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/payu_dimen_30dp"
        android:id="@+id/llMain"
        android:background="@drawable/button_border_5dp"
        android:backgroundTint="@color/light_gray"
        android:layout_marginTop="@dimen/margin_4"
        android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/rbOptions"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_5"
        android:layout_alignParentStart="true"
        android:button="@drawable/radioboxnew"
        android:textAppearance="@style/MediumText"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:clickable="false"
        android:visibility="gone"/>

        <ImageView
            android:id="@+id/ivLocked"
            android:layout_width="@dimen/payu_dimen_0dp"
            android:layout_height="@dimen/margin_20"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_5"
            android:src="@drawable/lock_primary2"
            android:visibility="gone"/>

    <com.capitalnowapp.mobile.customviews.CNTextView
        android:id="@+id/tvEmiAmount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:layout_margin="@dimen/margin_2"
        android:text="20000"
        android:textStyle="bold"
        android:gravity="center|start"
        android:textSize="@dimen/payu_dimen_12sp"
        android:textColor="@color/black"/>

    <com.capitalnowapp.mobile.customviews.CNTextView
        android:id="@+id/tvEmiName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_margin="@dimen/margin_2"
        android:text="2 EMI"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/payu_dimen_12sp"
        android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>