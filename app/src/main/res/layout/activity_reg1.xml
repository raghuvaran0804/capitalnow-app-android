<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.Reg1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:orientation="horizontal">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FILL YOUR DETAILS"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/payu_dimen_16dp"
        android:layout_marginEnd="@dimen/payu_dimen_16dp"
        android:layout_marginTop="@dimen/payu_dimen_8dp"
        android:layout_marginBottom="@dimen/payu_dimen_8dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/payu_dimen_32dp"
            android:layout_marginEnd="@dimen/payu_dimen_5dp"
            android:background="@color/Primary1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/payu_dimen_5dp"
            android:layout_marginEnd="@dimen/payu_dimen_5dp"
            android:background="@color/light_gray"/>

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/payu_dimen_5dp"
            android:layout_marginEnd="@dimen/payu_dimen_32dp"
            android:background="@color/light_gray"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_weight="1"
                    android:text="Full Name(As per PAN)"
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/Accent1"
                    android:textSize="@dimen/payu_dimen_12sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                    <com.capitalnowapp.mobile.customviews.CNEditText
                        android:id="@+id/etFirstName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="First Name"
                        android:textColorHint="@color/light_gray"
                        android:inputType="text|textCapWords"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/dark_gray"
                        android:textCursorDrawable="@null"
                        android:paddingTop="@dimen/margin_5"
                        android:textSize="@dimen/payu_dimen_14sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                        tools:ignore="MissingConstraints" />


                    <com.capitalnowapp.mobile.customviews.CNEditText
                        android:id="@+id/etLastName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Last Name"
                        android:inputType="text|textCapWords"
                        android:maxLines="1"
                        android:importantForAutofill="no"
                        android:textColorHint="@color/light_gray"
                        android:paddingTop="@dimen/margin_5"
                        android:textSize="@dimen/payu_dimen_14sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/dark_gray"
                        android:textCursorDrawable="@null"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                        tools:ignore="MissingConstraints" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender"
                    android:textAppearance="@style/SmallText"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/Accent1"/>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DOB"
                    android:textAppearance="@style/SmallText"
                    android:layout_marginStart="@dimen/margin_3"
                    android:textSize="@dimen/payu_dimen_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/Accent1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select"
                    android:inputType="text|textCapWords"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:maxLines="1"
                    android:importantForAutofill="no"
                    android:textColorHint="@color/light_gray"
                    android:paddingTop="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textColor="@color/dark_gray"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

                    <com.capitalnowapp.mobile.customviews.CNEditText
                        android:id="@+id/etDOB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Select"
                        android:inputType="text|textCapWords"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:maxLines="1"
                        android:importantForAutofill="no"
                        android:textColorHint="@color/light_gray"
                        android:paddingTop="@dimen/margin_5"
                        android:textSize="@dimen/payu_dimen_14sp"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/dark_gray"
                        android:textCursorDrawable="@null"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                        tools:ignore="MissingConstraints" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PAN Card No"
                    android:textAppearance="@style/SmallText"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/Accent1"/>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Employment Type"
                    android:textAppearance="@style/SmallText"
                    android:layout_marginStart="@dimen/margin_3"
                    android:textSize="@dimen/payu_dimen_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/Accent1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etPAN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter PAN"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:importantForAutofill="no"
                    android:textColorHint="@color/light_gray"
                    android:paddingTop="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:maxLength="10"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/dark_gray"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etEmpType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select"
                    android:inputType="text|textCapWords"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:maxLines="1"
                    android:importantForAutofill="no"
                    android:textColorHint="@color/light_gray"
                    android:layout_marginTop="-3dp"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textColor="@color/dark_gray"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_8"
                android:text="Company Name"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/etCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Company Name"
                    android:inputType="text|textCapWords"
                    android:maxLines="1"
                    android:textColorHint="@color/light_gray"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/dark_gray"
                    android:paddingTop="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

            <RelativeLayout
                android:id="@+id/tvSearching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_15"
                android:gravity="center|end"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/etCompanyName">

                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="@dimen/margin_10"
                    android:layout_height="@dimen/margin_10"
                    android:layout_gravity="center"
                    android:layout_toStartOf="@id/tvS"
                    android:visibility="visible" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center|end"
                    android:text="Searching.."
                    android:textAppearance="@style/VerySmallText"
                    android:textColor="@color/black"
                    android:textSize="@dimen/payu_dimen_8sp"
                    android:visibility="visible" />

            </RelativeLayout>

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_8"
                android:text="Industry Type"
                android:layout_marginStart="@dimen/margin_5"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNEditText
                android:id="@+id/etIndType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select"
                android:inputType="text|textCapWords"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:maxLines="1"
                android:importantForAutofill="no"
                android:paddingTop="@dimen/margin_5"
                android:textSize="@dimen/payu_dimen_14sp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/light_gray"
                android:textCursorDrawable="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                tools:ignore="MissingConstraints" />


                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textAppearance="@style/SmallText"
                    android:textSize="@dimen/payu_dimen_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/Accent1"/>

            <com.capitalnowapp.mobile.customviews.CNEditText
                android:id="@+id/etDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Department"
                android:inputType="text|textCapWords"
                android:maxLines="1"
                android:importantForAutofill="no"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:paddingTop="@dimen/margin_5"
                android:textSize="@dimen/payu_dimen_14sp"
                android:textColorHint="@color/light_gray"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textColor="@color/dark_gray"
                android:textCursorDrawable="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                tools:ignore="MissingConstraints" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Designation"
                    android:textAppearance="@style/SmallText"
                    android:layout_marginStart="@dimen/margin_3"
                    android:textSize="@dimen/payu_dimen_12sp"
                    android:textStyle="bold"
                    android:textColor="@color/Accent1"/>


                <AutoCompleteTextView
                    android:id="@+id/etSearchDesignation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/margin_3"
                    android:paddingEnd="@dimen/payu_dimen_20dp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:importantForAutofill="no"
                    android:hint="Search Designation"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="Monthly Salary"
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/Accent1"
                    android:textSize="@dimen/payu_dimen_12sp"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_3"
                    android:layout_weight="1"
                    android:text="Mode Of Salary"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/Accent1"
                    android:textSize="@dimen/payu_dimen_12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etMonthlySalary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Net Salary"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="6"
                    android:importantForAutofill="no"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etModeOfSalary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select"
                    android:inputType="text|textCapWords"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:maxLines="1"
                    android:importantForAutofill="no"
                    android:paddingTop="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

        </LinearLayout>

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_8"
                android:text="Present Address Pincode"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etPincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Pincode"
                    android:maxLines="1"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:importantForAutofill="no"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_8"
                android:text="Permanent Address Pincode"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNEditText
                android:id="@+id/etPerPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Pincode"
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:paddingTop="@dimen/margin_5"
                android:textSize="@dimen/payu_dimen_14sp"
                android:importantForAutofill="no"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/light_gray"
                android:textCursorDrawable="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                tools:ignore="MissingConstraints" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_8"
                android:text="Office Address Pincode"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNEditText
                android:id="@+id/etOfficePincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Pincode"
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:paddingTop="@dimen/margin_5"
                android:textSize="@dimen/payu_dimen_14sp"
                android:importantForAutofill="no"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/light_gray"
                android:textCursorDrawable="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                tools:ignore="MissingConstraints" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_8"
                android:text="How do you know about CapitalNow?"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etHowDoYouKnow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select"
                    android:inputType="text|textCapWords"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:importantForAutofill="no"
                    android:paddingEnd="0dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
