<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.offer.OfflineAadharActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/otp_back"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:src="@drawable/cn_logo_small"/>

        <ImageView
            android:id="@+id/ivHelp"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/qc_tv_basic_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16"
                android:text="Aadhar Card"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_24" />

            <LinearLayout
                android:id="@+id/llUpWards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvUploadAadhaar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_30"
                        android:text="@string/upload_aadhaar"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_pan_Hint"
                        android:textColor="@color/cb_errorRed"
                        android:textSize="@dimen/payu_dimen_12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:id="@+id/ivAadhaarFront"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="@dimen/margin_5"
                            android:layout_weight="1"
                            android:background="@drawable/dotted_border"
                            android:padding="@dimen/margin_35"
                            android:src="@drawable/cs_uploadpan"
                            tools:ignore="ContentDescription" />


                        <FrameLayout
                            android:id="@+id/ivFrameFront"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:background="@drawable/dotted_border"
                            android:src="@drawable/ic_upload_image"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/ivAImgFront"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/ivCancelFront"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:background="@drawable/ic_cancel_grey_24dp" />

                        </FrameLayout>

                        <ImageView
                            android:id="@+id/ivAadhaarBack"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/dotted_border"
                            android:padding="@dimen/margin_35"
                            android:src="@drawable/cs_uploadpan" />


                        <FrameLayout
                            android:id="@+id/ivFrameBack"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="@dimen/margin_5"
                            android:layout_weight="1"
                            android:background="@drawable/dotted_border"
                            android:src="@drawable/ic_upload_image"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/ivAImgBack"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/ivCancelBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:background="@drawable/ic_cancel_grey_24dp" />

                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSuccess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/margin_5"
                        android:drawableStart="@drawable/ic_success"
                        android:drawablePadding="@dimen/margin_10"
                        android:gravity="center"
                        android:text="Verified"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvfailure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/margin_5"
                        android:drawableStart="@drawable/ic_failure"
                        android:drawablePadding="@dimen/margin_10"
                        android:gravity="center"
                        android:text="@string/failed"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints">

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:id="@+id/tvAadhaarFront"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_weight="1"
                            android:text="Front Side"
                            android:textAlignment="center"
                            android:textAppearance="@style/SmallText"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:id="@+id/tvAadhaarBack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_20"
                            android:layout_marginTop="@dimen/margin_15"
                            android:layout_weight="1"
                            android:text="Back Side"
                            android:textAlignment="center"
                            android:textAppearance="@style/SmallText"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_32"
                    android:orientation="vertical">

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_30"
                        android:text="Aadhar Number"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAadhaar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/Primary2"
                        app:hintTextColor="@color/Primary2"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAadharNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="@string/enter_aadhaar_number"
                            android:inputType="number"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/dark_gray"
                            android:textCursorDrawable="@null"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                            tools:ignore="MissingConstraints" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAadhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_50"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:padding="@dimen/margin_16"
                    android:background="@drawable/dotted_border_darkblue"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/til_city">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cbConfirmAadhar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:button="@drawable/checkbox"
                        android:textColor="@color/black" />

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvAadharConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_15"
                        android:text="@string/aadhaar_confirmation"
                        android:textAppearance="@style/VerySmallText"
                        android:textColor="@color/black"
                        android:textColorHighlight="#00FFFFFF" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_32"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="17dp"
            android:text="Next"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute"
            android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>