<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlIns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="@dimen/margin_10"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:gravity="center"
            android:textAppearance="@style/LargeTextWithBold"
            android:textColor="@color/Secondary1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDot"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_5" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvPayLess1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_5"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="8sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBreakUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:layout_weight="6"
            android:nestedScrollingEnabled="false" />

        <LinearLayout
            android:id="@+id/llOp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvTotalAmount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/ExtraLargeTextWithBold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="visible" />

            <include
                android:id="@+id/frameIns"
                layout="@layout/item_active_loans_ins_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_box"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/margin_5"
        android:background="@color/colorGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvTotalTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/black" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textAppearance="@style/LargeTextWithBold"
            android:textColor="@color/black" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/apply_now_bg"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="Select"
            android:textAllCaps="true"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/Primary2" />
    </LinearLayout>
</LinearLayout>