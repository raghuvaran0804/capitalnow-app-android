<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_15"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_50"
    app:cardCornerRadius="@dimen/margin_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.capitalnowapp.mobile.customviews.CNEditText
            android:id="@+id/etReferenceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_30"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="text|textCapWords"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/qc_tv_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_30"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_30"
            android:alpha="0.4"
            android:background="@color/dark_gray" />

        <com.capitalnowapp.mobile.customviews.CNEditText
            android:id="@+id/etRelation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_30"
            android:backgroundTint="@color/dark_gray"
            android:hint="Enter Relation"
            android:inputType="text"
            android:paddingBottom="@dimen/margin_15"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:drawableStart="@drawable/ic_reference_remove"
                android:drawablePadding="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/remove"
                android:textAppearance="@style/VerySmallText"
                android:textColor="@color/black" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@drawable/ic_reference_add"
                android:drawablePadding="@dimen/margin_10"
                android:gravity="center|end"
                android:text="@string/add_new"
                android:textAppearance="@style/VerySmallText"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>