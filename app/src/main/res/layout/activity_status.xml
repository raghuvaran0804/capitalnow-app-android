<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.offer.StatusActivity">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_16"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivCsLogo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_64"
                android:layout_weight="4"
                android:src="@drawable/cn_logo_small" />

            <ImageView
                android:id="@+id/ivHelp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>

        </LinearLayout>
        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvLoanPartnerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lineHeight="@dimen/payu_dimen_20dp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_8"
            android:text="LOAN PARTNER"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/black"
            android:textColorHighlight="#00FFFFFF"
            android:textSize="16sp" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvLoanPartnerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="KISETSU SAISON FINANCE (INDIA) PRIVATE LIMITED"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:orientation="vertical"
            android:visibility="visible">

            <!--ThankYou-->
            <LinearLayout
                android:id="@+id/llThankYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivPan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:src="@drawable/cs_thankyou" />

                <TextView
                    android:id="@+id/tvSubmitSuccessfully"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_32"
                    android:background="@drawable/rounded_corner_stroke_green2"
                    android:drawableLeft="@drawable/ic_check_green_new"
                    android:drawablePadding="@dimen/margin_8"
                    android:paddingStart="@dimen/margin_32"
                    android:paddingTop="@dimen/margin_16"
                    android:paddingEnd="@dimen/margin_32"
                    android:paddingBottom="@dimen/margin_16"
                    android:text="Your Personal Loan Application #12345 has been Submitted Successfully."
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/colorAlertDialog"
                    android:textSize="@dimen/payu_dimen_14sp" />

                <TextView
                    android:id="@+id/tvCallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_32"
                    android:background="@drawable/rounded_corner_stroke_nach"
                    android:drawableLeft="@drawable/cs_representative"
                    android:drawablePadding="@dimen/margin_8"
                    android:paddingStart="@dimen/margin_32"
                    android:paddingTop="@dimen/margin_32"
                    android:paddingEnd="@dimen/margin_32"
                    android:paddingBottom="@dimen/margin_32"
                    android:text="Your Personal Loan Application #12345 has been Submitted Successfully."
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/black"
                    android:textSize="@dimen/payu_dimen_14sp" />
            </LinearLayout>
            <!--Failure-->
            <LinearLayout
                android:id="@+id/llFailure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_stroke_red"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_64">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_16"
                        android:src="@drawable/cs_denied" />

                    <TextView
                        android:id="@+id/tvDeniedTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="Loan Denied"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tvDeniedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_32"
                        android:layout_marginTop="@dimen/margin_32"
                        android:layout_marginEnd="@dimen/margin_32"
                        android:text="Your application has been Declined."
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvReApply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_32"
                    android:background="@drawable/rounded_corner_stroke_low"
                    android:padding="@dimen/margin_32"
                    android:text="You can now re-apply \n for Loan after 90 days."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>
            <!--Hold-->
            <LinearLayout
                android:id="@+id/llHold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_stroke_lorange_orange"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_64">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_16"
                        android:src="@drawable/cs_hold" />

                    <TextView
                        android:id="@+id/tvHoldTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="WAIT..\nYouâ€™re on Hold"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/tvHoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_32"
                        android:layout_marginTop="@dimen/margin_32"
                        android:layout_marginEnd="@dimen/margin_32"
                        android:text="Your application has been Placed on Hold."
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvrReachOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_32"
                    android:background="@drawable/rounded_corner_stroke_low"
                    android:padding="@dimen/margin_32"
                    android:text="Our Team Executive shall reach-out  to you, for further completion of the Application."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_weight="0">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="17dp"
            android:text="OKAY"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>

</LinearLayout>