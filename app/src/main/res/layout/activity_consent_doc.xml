<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.ConsentDocActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewHover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@color/black"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:minHeight="?attr/actionBarSize"
                android:text="@string/borrower_agreement_consent"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_5"
                android:background="@color/Primary1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAccessLock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_doc_lock" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="?attr/actionBarSize"
                android:text="@string/enter_access_code"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <com.chaos.view.PinView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:itemCount="4"
                app:itemRadius="@dimen/margin_3"
                app:itemSpacing="30dp"
                app:lineColor="@color/white" />


            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvViewConsent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_50"
                android:background="@drawable/rounded_corner_gradient"
                android:gravity="center"
                android:paddingStart="@dimen/margin_15"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_10"
                android:text="@string/give_access"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:visibility="gone"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_10"
                android:layout_weight="9"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/llTerms"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbAgreeTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:textColor="@color/black" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tv_privacy_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_25"
                    android:layout_marginEnd="@dimen/margin_25"
                    android:textAppearance="@style/VerySmallText"
                    android:textColor="@color/black"
                    android:textColorHighlight="#00FFFFFF" />
            </LinearLayout>

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvOk"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/rounder_grey_border"
                android:backgroundTint="@color/colorGrey"
                android:enabled="false"
                android:gravity="center"
                android:paddingStart="@dimen/margin_30"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_30"
                android:paddingBottom="@dimen/margin_10"
                android:text="I Agree"
                android:visibility="gone"
                android:textAllCaps="true"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/viewHover1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/black"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llScroll"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:visibility="gone"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivGif"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"/>

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvScrollText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rounder_yellow_border"
                android:layout_marginStart="@dimen/margin_30"
                android:layout_marginEnd="@dimen/margin_30"
                android:padding="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_20"
                android:minHeight="?attr/actionBarSize"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>
</LinearLayout>