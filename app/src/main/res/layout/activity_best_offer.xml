<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.offer.BestOfferActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@color/cs_bg"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCsLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/cn_logo_small" />
        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvLoanPartnerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lineHeight="@dimen/payu_dimen_20dp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_8"
            android:text="LOAN PARTNER"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/black"
            android:textColorHighlight="#00FFFFFF"
            android:textSize="16sp" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvLoanPartnerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp" />


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_64"
        android:padding="@dimen/margin_16"
        android:src="@drawable/cs_generateoffers" />
    </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32"
                android:gravity="center"
                android:text="Generating Best Offers \nFor you..."
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/givProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:src="@drawable/cs_progress_line" />

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="@dimen/margin_32"
                android:background="@drawable/rounded_corner"
                android:padding="@dimen/margin_16"
                android:drawableLeft="@drawable/cs_message_icon"
                android:drawablePadding="@dimen/margin_16"
                android:text="You shall be notified on App and also receive application status via. SMS "
                android:textAppearance="@style/SmallText"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>