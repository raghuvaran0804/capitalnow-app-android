<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.AadharVerificationFragment">

    <com.capitalnowapp.mobile.customviews.CNTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_16"
        android:text="Aadhaar Verification"
        android:textAppearance="@style/LargeTextWithBold"
        android:textColor="@color/Primary2"
        android:textSize="@dimen/margin_24"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginEnd="@dimen/margin_32"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llEnterAadhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvAadhaarVerification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enter Aadhaar Number"
                android:layout_marginTop="@dimen/margin_32"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/black"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:src="@drawable/aadhar_icon" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAadhaar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_50"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/Primary2"
                        app:hintTextColor="@color/Primary2"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAadhar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="@string/enter_aadhaar_number"
                            android:inputType="number"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:paddingStart="0dp"
                            android:paddingEnd="0dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/dark_gray"
                            android:textCursorDrawable="@null"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                            tools:ignore="MissingConstraints" />

                    </com.google.android.material.textfield.TextInputLayout>

                </FrameLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/llCaptcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32"
                android:layout_marginBottom="@dimen/margin_16"
                android:background="@drawable/rectangle_border_gray"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margin_8"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivCaptcha"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/ivRefresh"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/refresh_captcha"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCaptcha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:layout_marginStart="@dimen/margin_64"
                    android:layout_marginEnd="@dimen/margin_64"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/transparent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCaptcha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Captcha"
                        android:gravity="center"
                        android:maxLength="100"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/payu_dimen_16sp"
                        android:textCursorDrawable="@null" />

                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/llMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/til_city"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbConfirmMobile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:textColor="@color/black" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvMobileConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Mobile number not linked with Aadhaar ?"
                    android:textAppearance="@style/VerySmallText"
                    android:textColor="@color/black"
                    android:textColorHighlight="#00FFFFFF" />

            </LinearLayout>

            <!--Image Upload-->

            <LinearLayout
                android:id="@+id/llUploadAadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvUploadAadhaar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="@string/upload_aadhaar"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_pan_Hint"
                    android:textColor="@color/cb_errorRed"
                    android:textSize="@dimen/payu_dimen_12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/ivAadhaarFront"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:padding="@dimen/margin_35"
                        android:src="@drawable/ic_upload_image"
                        tools:ignore="ContentDescription" />


                    <FrameLayout
                        android:id="@+id/ivFrameFront"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:src="@drawable/ic_upload_image"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivAImgFront"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/ivCancelFront"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@drawable/ic_cancel_grey_24dp" />

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/ivAadhaarBack"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:padding="@dimen/margin_35"
                        android:src="@drawable/ic_upload_image" />


                    <FrameLayout
                        android:id="@+id/ivFrameBack"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:src="@drawable/ic_upload_image"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivAImgBack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/ivCancelBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@drawable/ic_cancel_grey_24dp" />

                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSuccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableStart="@drawable/ic_success"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center"
                    android:text="Verified"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvfailure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/margin_5"
                    android:drawableStart="@drawable/ic_failure"
                    android:drawablePadding="@dimen/margin_10"
                    android:gravity="center"
                    android:text="@string/failed"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvAadhaarFront"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/aadhaar_front"
                        android:textAppearance="@style/SmallText"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvAadhaarBack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/aadhaar_back"
                        android:textAppearance="@style/SmallText"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>
                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:gravity="center"
                    android:text="This will be reviewed manually and may take upto 24 Hours"
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/cb_errorRed"
                    android:textSize="10sp" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="NOTE:"
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/note_text"
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:orientation="vertical"
        android:layout_weight="0">

        <LinearLayout
            android:id="@+id/llAadhaar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/til_city">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbConfirmAadhaar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:button="@drawable/checkbox"
                android:textColor="@color/black" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvAadhaarConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/aadhaar_confirmation"
                android:textAppearance="@style/VerySmallText"
                android:textColor="@color/black"
                android:textColorHighlight="#00FFFFFF" />

        </LinearLayout>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvSendOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="17dp"
            android:text="Send OTP"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="17dp"
            android:text="Upload"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:ignore="UnusedAttribute" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="@string/skip_this"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/Primary2"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>