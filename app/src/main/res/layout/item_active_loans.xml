<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_7"
    app:cardCornerRadius="@dimen/margin_5"
    app:cardMaxElevation="@dimen/margin_3"
    tools:context=".kotlin.fragments.ActiveLoansFragment"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:layout_marginTop="@dimen/margin_25"
        android:layout_marginBottom="@dimen/margin_15"
        android:background="@drawable/dotted_line"/>


    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvLoanId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CNL01803314"
                android:gravity="center"
                android:textSize="@dimen/payu_dimen_20sp"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/Primary2" />
            <ImageView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:src="@drawable/ic_active_info"/>

        </LinearLayout>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvIssueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="05/Jun/2024 (23)"
            android:gravity="center"
            android:textSize="@dimen/payu_dimen_12sp"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/Primary2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/llItem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_10"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_top"
                android:backgroundTint="@color/Accent1"
                android:gravity="center">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvLoanId1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:paddingStart="@dimen/margin_10"
                    android:textAppearance="@style/MediumText"
                    android:textColor="@color/white" />


                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvIssueDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingEnd="@dimen/margin_10"
                    android:textAppearance="@style/MicroText"
                    android:textColor="@color/white" />
            </LinearLayout>

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvInfo1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="@dimen/margin_5"
                android:text="View Details>"
                android:textAppearance="@style/MicroText"
                android:textColor="@color/Primary1" />

        </LinearLayout>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:background="@drawable/bg_rectangle_transp_green"
            android:drawableStart="@drawable/ic_baseline_check_circle_24"
            android:drawableTint="#00DA43"
            android:drawablePadding="@dimen/margin_8"
            android:paddingStart="@dimen/margin_2"
            android:paddingEnd="@dimen/margin_10"
            android:paddingTop="@dimen/margin_2"
            android:paddingBottom="@dimen/margin_2"
            android:gravity="center|start"
            android:textAppearance="@style/MicroText"
            android:textColor="@color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvIns"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>