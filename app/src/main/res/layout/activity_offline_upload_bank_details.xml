<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.offer.OfflineUploadBankDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/otp_back"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:src="@drawable/cn_logo_small"/>

        <ImageView
            android:id="@+id/ivHelp"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/qc_tv_basic_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16"
                android:text="Bank Statement"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_24" />

            <LinearLayout
                android:id="@+id/llUpWards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSelectBankUpWards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/Primary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSelectBankUpWards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:drawablePadding="@dimen/margin_5"
                        android:focusable="false"
                        android:hint="Select Bank"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="0dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30"
                    android:text="Upload Last 3 Months Salary Bank Account Statement"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/ivMonth1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:padding="@dimen/margin_35"
                        android:src="@drawable/cs_uploadpan"
                        tools:ignore="ContentDescription" />
                    <FrameLayout
                        android:id="@+id/ivFrameMonth1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:src="@drawable/ic_upload_image"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivAImgMonth1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/ivCancelMonth1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@drawable/ic_cancel_grey_24dp" />

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/ivMonth2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:padding="@dimen/margin_35"
                        android:src="@drawable/cs_uploadpan" />
                    <FrameLayout
                        android:id="@+id/ivFrameMonth2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:src="@drawable/ic_upload_image"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivAImgMonth2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/ivCancelMonth2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@drawable/ic_cancel_grey_24dp" />

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/ivMonth3"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:padding="@dimen/margin_35"
                        android:src="@drawable/cs_uploadpan" />
                    <FrameLayout
                        android:id="@+id/ivFrameMonth3"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/dotted_border"
                        android:src="@drawable/ic_upload_image"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivAImgMonth3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/ivCancelMonth3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@drawable/ic_cancel_grey_24dp" />

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvMonth1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_weight="1"
                        android:text="Month 1"
                        android:textAlignment="center"
                        android:textAppearance="@style/SmallText"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvMonth2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_weight="1"
                        android:text="Month 2"
                        android:textAlignment="center"
                        android:textAppearance="@style/SmallText"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvMont3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_weight="1"
                        android:text="Month 3"
                        android:textAlignment="center"
                        android:textAppearance="@style/SmallText"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_30"
                    android:src="@drawable/or_icon" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:text="Consolidated 3 Months Statement"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/iv3Months"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@drawable/dotted_border"
                    android:padding="@dimen/margin_35"
                    android:src="@drawable/cs_uploadpan"
                    tools:ignore="ContentDescription" />
                <FrameLayout
                    android:id="@+id/ivFrame3Months"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/dotted_border"
                    android:src="@drawable/cs_uploadpan"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivA3Months"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/ivCancel3Months"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/ic_cancel_grey_24dp" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/llBankStatement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_50"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:padding="@dimen/margin_16"
                    android:background="@drawable/dotted_border_darkblue"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/til_city">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cbConfirmBankStatement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16"
                        android:button="@drawable/checkbox"
                        android:textColor="@color/black" />

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvBankStatementConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_15"
                        android:text="I authorise Capital Now &amp; its Loan partners to analyse my Bank Statement for processing my loan and I provide consent to Capital Now for verification of my Salary Bank Account"
                        android:textAppearance="@style/VerySmallText"
                        android:textColor="@color/black"
                        android:textColorHighlight="#00FFFFFF" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_32"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="17dp"
            android:text="Next"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute"
            android:visibility="visible"/>

    </RelativeLayout>
</LinearLayout>