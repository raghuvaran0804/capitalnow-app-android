<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.offer.RegistrationForm3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/otp_back" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:layout_gravity="center"
            android:src="@drawable/cn_logo_small"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/qc_tv_basic_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16"
                android:text="Professional Details"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_24"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmployerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/Primary2"
                app:boxStrokeColor="@color/Primary2"
                app:boxBackgroundColor="@color/white"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmployerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Employer Name"
                    android:inputType="text|textCapWords"
                    android:textCursorDrawable="@null"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilOfficialEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/Primary2"
                app:boxStrokeColor="@color/Primary2"
                app:boxBackgroundColor="@color/white"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOfficialEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Official Email ID"
                    android:inputType="textEmailAddress"
                    android:textCursorDrawable="@null"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This must be your work email address."
                android:textAppearance="@style/SmallText"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/margin_3"
                android:textColor="@color/dark_gray"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilWorkExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/Primary2"
                app:hintTextColor="@color/Primary2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etWorkExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:maxLines="1"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:drawablePadding="@dimen/margin_5"
                    android:focusable="false"
                    android:hint="Total Work Experience"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@null" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="Salary Mode"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/rgSalaryMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/tvOnline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center|start"
                        android:padding="@dimen/margin_8"
                        android:text="Online"
                        android:textAppearance="@style/SmallText"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/tvCash"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center|start"
                        android:padding="@dimen/margin_8"
                        android:text="Cash"
                        android:textAppearance="@style/SmallText"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/tvCheque"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center|start"
                        android:text="Cheque"
                        android:textAppearance="@style/SmallText"
                        android:textColor="@color/black" />
                </RadioGroup>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCorAddressLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/Primary2"
                app:boxStrokeColor="@color/Primary2"
                app:boxBackgroundColor="@color/white"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCorAddressLine1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Corresponding Address Line 1"
                    android:inputType="text|textCapWords"
                    android:textCursorDrawable="@null"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House No, Wing, Floor, Apartment Name/Individual House Name"
                android:textAppearance="@style/SmallText"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/margin_3"
                android:textColor="@color/dark_gray"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCorAddressLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/Primary2"
                app:boxStrokeColor="@color/Primary2"
                app:boxBackgroundColor="@color/white"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCorAddressLine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Corresponding Address Line 2"
                    android:inputType="text|textCapWords"
                    android:textCursorDrawable="@null"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locality/ Area / Lane Name"
                android:textAppearance="@style/SmallText"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/margin_3"
                android:textColor="@color/dark_gray"/>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/Primary2"
                app:boxStrokeColor="@color/Primary2"
                app:boxBackgroundColor="@color/white"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="text|textCapWords"
                    android:textCursorDrawable="@null"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPinCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/Primary2"
                app:boxStrokeColor="@color/Primary2"
                app:boxBackgroundColor="@color/white"
                tools:ignore="MissingConstraints">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPinCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pin Code"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="textCapCharacters"
                    android:maxLength="8"
                    android:digits="0123456789"
                    android:textCursorDrawable="@null"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />

            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_weight="0">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="17dp"
            android:text="Next"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>

</LinearLayout>