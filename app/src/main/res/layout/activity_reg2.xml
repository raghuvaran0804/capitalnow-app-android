<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.Reg2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:orientation="horizontal">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FILL YOUR DETAILS"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/payu_dimen_16dp"
        android:layout_marginEnd="@dimen/payu_dimen_16dp"
        android:layout_marginTop="@dimen/payu_dimen_8dp"
        android:layout_marginBottom="@dimen/payu_dimen_8dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/payu_dimen_32dp"
            android:layout_marginEnd="@dimen/payu_dimen_5dp"
            android:background="@color/Primary1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/payu_dimen_5dp"
            android:layout_marginEnd="@dimen/payu_dimen_5dp"
            android:background="@color/Primary1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/payu_dimen_5dp"
            android:layout_marginEnd="@dimen/payu_dimen_32dp"
            android:background="@color/light_gray"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternate Mobile No"
                android:layout_marginStart="@dimen/margin_5"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNEditText
                android:id="@+id/etAlterMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile No"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_5"
                android:textSize="@dimen/payu_dimen_14sp"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/light_gray"
                android:textCursorDrawable="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                tools:ignore="MissingConstraints" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvVerifyAltMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_5"
                android:gravity="center"
                android:layout_gravity="right"
                android:padding="5dp"
                android:text="@string/verify_underline"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/Primary1"
                tools:ignore="UnusedAttribute" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Official Email"
                android:layout_marginStart="@dimen/margin_5"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNEditText
                android:id="@+id/etAlterEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mail Id"
                android:maxLines="1"
                android:importantForAutofill="no"
                android:paddingTop="@dimen/margin_5"
                android:textSize="@dimen/payu_dimen_14sp"
                android:inputType="textEmailAddress"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/light_gray"
                android:textCursorDrawable="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llNoOffEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cbAgreeTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox"
                        android:clickable="true"
                        android:focusable="true" />

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvPrivacyLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_16"
                        android:lineHeight="@dimen/payu_dimen_15dp"
                        android:text="Don't have official email id"
                        android:textAppearance="@style/VerySmallText"
                        android:textColor="@color/black"
                        android:textColorHighlight="#00FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvVerifyOffEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:text="@string/verify_underline"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/Primary1"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvdtText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="start"
                android:layout_gravity="start"
                android:text="*No official email ID can delay employment verification"
                android:textSize="12sp"
                android:textColor="@color/cb_errorRed"
                tools:ignore="UnusedAttribute"
                android:visibility="gone"/>



            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_8"
                android:text="Experience in Years"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNEditText
                android:id="@+id/etExpInYears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select"
                android:inputType="text|textCapWords"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:maxLines="1"
                android:importantForAutofill="no"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:paddingTop="@dimen/margin_5"
                android:textSize="@dimen/payu_dimen_14sp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/light_gray"
                android:textCursorDrawable="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                tools:ignore="MissingConstraints" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_8"
                android:text="Salary Date"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/Accent1"
                android:textSize="@dimen/payu_dimen_12sp"
                android:textStyle="bold" />


            <com.capitalnowapp.mobile.customviews.CNEditText
                android:id="@+id/etSalDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:inputType="text|textCapWords"
                android:paddingTop="@dimen/margin_5"
                android:importantForAutofill="no"
                android:textSize="@dimen/payu_dimen_14sp"
                android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:textColor="@color/dark_gray"
                android:textColorHint="@color/light_gray"
                android:textCursorDrawable="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                tools:ignore="MissingConstraints" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_weight="0">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvProceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="15dp"
            android:text="SUBMIT"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>

</LinearLayout>