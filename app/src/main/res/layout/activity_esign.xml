<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.offer.ESignActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_8"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2E9F4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCsLogo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginStart="@dimen/margin_64"
                android:gravity="center"
                android:src="@drawable/cn_logo_small" />

            <ImageView
                android:id="@+id/ivHelp"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            </LinearLayout>
            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvLoanPartnerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineHeight="@dimen/payu_dimen_20dp"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/margin_8"
                android:text="LOAN PARTNER"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:textColorHighlight="#00FFFFFF"
                android:textSize="16sp" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvLoanPartnerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="KISETSU SAISON FINANCE (INDIA) PRIVATE LIMITED"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/qc_tv_basic_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="Borrow Agreement"
            android:textAppearance="@style/LargeTextWithBold"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_24"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="500dp"/>


            <LinearLayout
                android:id="@+id/llConsent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/margin_20"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/til_city">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbAgreeTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:clickable="true"
                    android:focusable="false"
                    android:textColor="@color/black" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvSignatureConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="I have read and I agree to Credit Saisonâ€™s Borrower Agreement"
                    android:layout_marginStart="@dimen/margin_10"
                    android:textAppearance="@style/VerySmallText"
                    android:textColor="@color/black"
                    android:textColorHighlight="#00FFFFFF" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_weight="0">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="17dp"
            android:text="Next"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>

</LinearLayout>