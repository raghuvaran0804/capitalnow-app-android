<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/single_rounded_square"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/success_new"
        android:layout_marginTop="@dimen/margin_20"/>

    <com.capitalnowapp.mobile.customviews.CNTextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:paddingStart="@dimen/margin_20"
        android:paddingEnd="@dimen/margin_20"
        android:gravity="center"
        android:textAppearance="@style/SmallText"
        android:textColor="@color/intro_page_body_color" />


    <com.capitalnowapp.mobile.customviews.CNTextView
        android:id="@+id/tvOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@drawable/rounded_corner_gradient"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_10"
        android:paddingStart="@dimen/margin_50"
        android:paddingTop="@dimen/margin_10"
        android:paddingEnd="@dimen/margin_50"
        android:paddingBottom="@dimen/margin_10"
        android:text="OK"
        android:textAppearance="@style/MediumText"
        android:textColor="@color/white"/>

</LinearLayout>