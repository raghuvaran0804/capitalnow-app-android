<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_marginStart="@dimen/margin_16"
    android:layout_marginEnd="@dimen/margin_16"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:src="@drawable/security_alert_icon"
            android:layout_gravity="center"/>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingStart="@dimen/margin_25"
            android:paddingTop="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_25"
            android:paddingBottom="@dimen/margin_10"
            android:text="Alert"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/payu_dimen_20sp"
            android:visibility="visible" />


        <WebView
            android:id="@+id/wvText"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:text="@string/do_not_refresh"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_gravity="center"
            android:lineHeight="@dimen/margin_20"
            android:padding="@dimen/margin_10"
            android:textSize="14sp"
            android:textColor="#5f5f6f"/>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_20"
            android:paddingStart="@dimen/margin_64"
            android:paddingTop="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_64"
            android:paddingBottom="@dimen/margin_10"
            android:text="@string/payu_gpay_ok"
            android:textAllCaps="true"
            android:textAppearance="@style/VerySmallText"
            android:textColor="@color/white"
            android:visibility="visible" />

    </LinearLayout>
</FrameLayout>