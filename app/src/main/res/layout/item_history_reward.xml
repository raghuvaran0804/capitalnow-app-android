<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3"
    app:cardCornerRadius="@dimen/margin_3"
    app:cardMaxElevation="@dimen/margin_3"
    app:cardUseCompatPadding="true"
    tools:context=".kotlin.fragments.ActiveLoansFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_7">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRewardType"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:paddingLeft="@dimen/padding_10"
                android:paddingTop="@dimen/padding_5"
                android:src="@drawable/ic_rewards_history" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_weight="0.7"
            android:gravity="center|start"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvRewardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:text="Cash"
                android:textAppearance="@style/VerySmallText"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvRewardId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2"
                    android:text="300"
                    android:textSize="10sp"
                    android:textColor="@color/intro_page_body_color" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvRewardReference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_2"
                    android:text="300"
                    android:textAppearance="@style/MicroText"
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvRewardDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:background="@drawable/single_rounded_square"
                android:backgroundTint="@color/login_page_background"
                android:paddingStart="@dimen/margin_5"
                android:paddingEnd="@dimen/padding_5"
                android:text="march"
                android:textAppearance="@style/MicroText"
                android:textColor="@color/intro_page_body_color" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvAmountReward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_10"
                android:gravity="center"
                android:text="250"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
