<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llProgress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10"
    android:background="@drawable/rounded_corner_stroke_7"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvTwlLoanStatusTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_weight="1"
            android:text="Loan Status"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/Accent1"
            android:textSize="@dimen/payu_dimen_12sp"
            android:textStyle="bold" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvTwlLoanId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_weight="1"
            android:gravity="right"
            android:text="CTNL00000006"
            android:textAppearance="@style/MicroText"
            android:textColor="@color/Accent1"
            android:textSize="@dimen/payu_dimen_12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_15">

        <LinearLayout
            android:id="@+id/llTwlImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivTwl1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_check_blue" />

            <View
                android:id="@+id/viewTwl1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/colorGrey" />

            <ImageView
                android:id="@+id/ivTwl2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_check_blue" />

            <View
                android:id="@+id/viewTwl2"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/colorGrey" />

            <ImageView
                android:id="@+id/ivTwl3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_error_outline_24" />

            <View
                android:id="@+id/viewTwl3"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/colorGrey" />

            <ImageView
                android:id="@+id/ivTwl4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_tick_grey" />

            <View
                android:id="@+id/viewTwl4"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/colorGrey" />

            <ImageView
                android:id="@+id/ivTwl5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_tick_grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTwlTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:orientation="horizontal">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvTwl1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/MicroText"
                android:textColor="@color/black" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvTwl2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/MicroText"
                android:textColor="@color/black" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvTwl3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/MicroText"
                android:textColor="@color/black" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvTwl4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/MicroText"
                android:textColor="@color/black" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvTwl5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/MicroText"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_marginEnd="@dimen/margin_15"
            android:background="@drawable/rounded_corner_loan"
            android:backgroundTint="#CEE2F5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llCancelLoan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cross_cancel" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:text="Cancel Loan"
                    android:textStyle="bold"
                    android:textColor="@color/Accent1"
                    android:textSize="@dimen/payu_dimen_12sp" />
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#AED2F7" />

            <LinearLayout
                android:id="@+id/llUploadQuotation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_upload" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textStyle="bold"
                    android:text="Upload Twl Quotation"
                    android:textColor="@color/Accent1"
                    android:textSize="@dimen/payu_dimen_12sp" />
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/flCongrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_twl_congrats" />

            <ImageView
                android:id="@+id/ivCustomerImg"
                android:layout_width="155dp"
                android:layout_height="195dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_50"
                android:background="@drawable/rounded_corner_bottom_new"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_no_delivery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_100"
                android:orientation="vertical">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvCongrats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/payu_dimen_24dp"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:text=""
                    android:textColor="@color/Accent2"
                    android:textStyle="bold"
                    android:textSize="@dimen/payu_dimen_14dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>