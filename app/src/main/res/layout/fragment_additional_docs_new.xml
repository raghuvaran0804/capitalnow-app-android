<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".kotlin.fragments.AdditionalDocsNewFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_20"
            android:rotation="180"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            app:tint="@color/Primary2" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:text="Addtional Documents"
            android:textColor="@color/Primary2"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:orientation="vertical">

            <!--Present Address Proof -->

            <LinearLayout
                android:id="@+id/llPresentAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                android:visibility="gone">


                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvPresentAddressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_docs_present_address_title"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvPresentAddressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="Aadhar Card/ Electricity Bill/ Gas Bill/ Telephone Bill/ Internet Bill/ Credit Card Bill/ HR Letter/ PG Invoice"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/ivFirst"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:background="@drawable/ic_upload_doc_up_new"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/ivSecond"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/ic_upload_doc_up_new" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_32"
                    android:background="@color/light_gray" />
            </LinearLayout>

            <!--Latest Salary Slip-->

            <LinearLayout
                android:id="@+id/llLatestSalarySlip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:orientation="vertical"
                android:visibility="gone"
                tools:ignore="MissingConstraints">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvLatestSalarySlip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="Latest Salary Slip"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/ivSalSlip"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:background="@drawable/ic_upload_doc_up_new"
                        tools:ignore="ContentDescription" />


                    <FrameLayout
                        android:id="@+id/ivFrameSalSlip"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/ic_upload_doc_up_new"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivImgSalSlip"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/ivCancelSalSlip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:background="@drawable/ic_cancel_grey_24dp" />

                    </FrameLayout>

                    <com.capitalnowapp.mobile.customviews.CNEditText
                        android:id="@+id/etSlipPwd"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_64"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:background="@drawable/login_page_text_view_background"
                        android:hint="Password if any"
                        android:inputType="textPassword"
                        android:maxLength="30"
                        android:padding="10dp"
                        android:textAppearance="@style/MicroText"
                        android:textColor="@color/intro_page_body_color"
                        android:textSize="14sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_16"
                    android:background="@color/light_gray" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.capitalnowapp.mobile.customviews.CNTextView
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:text="Note:"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="visible"
        android:textStyle="bold" />

    <com.capitalnowapp.mobile.customviews.CNTextView
        android:id="@+id/tvNoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:text="@string/note_text"
        android:textColor="@color/black"
        android:visibility="visible"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_weight="0">


        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvUploadAdditionalDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="17dp"
            android:text="Upload"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>



</LinearLayout>