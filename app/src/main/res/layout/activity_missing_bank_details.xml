<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.MissingBankDetailsActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvBack"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textColor="@color/Primary2"
                android:rotation="180"
                android:drawableTint="@color/Primary2"
                android:drawableStart="@drawable/ic_baseline_arrow_forward_24"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvPanVerification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_horizontal"
                android:text="@string/title_missing_details"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/Primary2"
                android:textStyle="bold" />
        </LinearLayout>



        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvMissingDetailsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32"
            android:text="@string/missing_details_text"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.capitalnowapp.mobile.customviews.CNEditText
            android:id="@+id/etAccountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bank_account_number"
            android:inputType="number"
            android:paddingTop="@dimen/margin_30"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@null"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_company_name"
            tools:ignore="MissingConstraints" />

        <com.capitalnowapp.mobile.customviews.CNEditText
            android:id="@+id/etReEnterAccountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/re_enter_account_no"
            android:inputType="number"
            android:paddingTop="@dimen/margin_30"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@null"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_company_name"
            tools:ignore="MissingConstraints" />

        <com.capitalnowapp.mobile.customviews.CNEditText
            android:id="@+id/etIFSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ifsc_code"
            android:inputType="text"
            android:maxLength="11"
            android:paddingTop="@dimen/margin_30"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textCursorDrawable="@null"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_company_name"
            tools:ignore="MissingConstraints" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/rounded_corner_gradient"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:padding="17dp"
            android:text="@string/title_submit"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilIndustry"
            tools:ignore="MissingConstraints" />
    </LinearLayout>





</RelativeLayout>