<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.offer.EMandateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:paddingBottom="@dimen/margin_8"
        android:background="@color/cs_bg"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCsLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/cn_logo_small" />
            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvLoanPartnerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineHeight="@dimen/payu_dimen_20dp"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/margin_8"
                android:text="LOAN PARTNER"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:textColorHighlight="#00FFFFFF"
                android:textSize="16sp" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvLoanPartnerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="KISETSU SAISON FINANCE (INDIA) PRIVATE LIMITED"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:visibility="visible"
            android:orientation="vertical">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/qc_tv_basic_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_16"
                android:text="Register Emandate"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_24"/>

            <FrameLayout
                android:id="@+id/flMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_corner_stroke_5"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:gravity="center"
                        android:padding="@dimen/margin_5"
                        android:src="@drawable/ic_e_nach" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:background="@drawable/rounded_corner_stroke_6"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@drawable/rounded_corner_stroke_6"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_60"
                                android:padding="@dimen/margin_5"
                                android:src="@drawable/bak" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:layout_marginEnd="@dimen/margin_10"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:background="@drawable/rounded_corner_stroke_6"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvBankName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:maxLines="1"
                                    android:text="State Bank of India"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/payu_dimen_16sp" />

                                <TextView
                                    android:id="@+id/tvAccountNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:text="xxxxxxxxxxxxxxx567"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/payu_dimen_16sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <WebView
                        android:id="@+id/wvNote"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_20"
                        android:visibility="visible"
                        tools:ignore="InvalidId,WebViewLayout" />

                    <LinearLayout
                        android:id="@+id/llTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/llActions"
                        android:layout_marginTop="@dimen/margin_32"
                        android:layout_marginBottom="@dimen/margin_32"
                        android:background="@drawable/dotted_border"
                        android:orientation="horizontal">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_agree_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_16"
                            android:layout_marginTop="@dimen/margin_8"
                            android:button="@drawable/checkbox" />

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:id="@+id/tvBorrowerTerms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_8"
                            android:lineHeight="@dimen/payu_dimen_20dp"
                            android:textAppearance="@style/VerySmallText"
                            android:textColor="@color/black"
                            android:textColorHighlight="#00FFFFFF"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSuccess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:background="@drawable/rounded_corner_stroke_green"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvSuccessTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:drawableLeft="@drawable/ic_green_tick"
                            android:drawablePadding="@dimen/margin_5"
                            android:text=""
                            android:textColor="@color/green"
                            android:textSize="@dimen/payu_dimen_14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSuccessText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:lineHeight="@dimen/payu_dimen_18sp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/payu_dimen_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llFailure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:background="@drawable/rounded_corner_stroke_red"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvFailureTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:drawableLeft="@drawable/ic_red_tick"
                            android:drawablePadding="@dimen/margin_5"
                            android:text=""
                            android:textColor="@color/cb_errorRed"
                            android:textSize="@dimen/payu_dimen_14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvFailureText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:lineHeight="@dimen/payu_dimen_18sp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/payu_dimen_14sp" />
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_weight="0"
        android:visibility="visible">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="17dp"
            android:text="PROCEED"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:ignore="UnusedAttribute" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/payu_gpay_ok"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:ignore="UnusedAttribute" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvRetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:background="@drawable/rounded_corner_gradient"
            android:backgroundTint="@color/cb_errorRed"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/failure_retry"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>
    <WebView
        android:id="@+id/wvNach"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:ignore="WebViewLayout" />

</LinearLayout>