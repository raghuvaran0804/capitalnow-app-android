<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/margin_16"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_32"
            android:layout_gravity="center"
            android:lineHeight="@dimen/margin_20"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/cb_errorRed"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginEnd="@dimen/margin_32"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_gravity="center"
            android:lineHeight="@dimen/margin_20"
            android:padding="@dimen/margin_10"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_gradient"
                android:gravity="center"
                android:layout_marginStart="@dimen/margin_100"
                android:layout_marginEnd="@dimen/margin_100"
                android:layout_gravity="center"
                android:paddingStart="@dimen/margin_25"
                android:paddingTop="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_25"
                android:paddingBottom="@dimen/margin_10"
                android:text="Got It"
                android:textAllCaps="true"
                android:textAppearance="@style/VerySmallText"
                android:textColor="@color/white"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>