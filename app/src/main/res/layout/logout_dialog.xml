<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/margin_50"
    android:layout_marginEnd="@dimen/margin_50"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white" />

    <ImageView
        android:id="@+id/ivUser"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:src="@drawable/ic_default_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:textAppearance="@style/LargeTextWithBold"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/margin_30"
            android:paddingEnd="@dimen/margin_30"
            android:text="@string/logout_text"
            android:textAppearance="@style/MediumText"
            android:textColor="@color/colorMyCams" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:orientation="horizontal">

            <com.capitalnowapp.mobile.customviews.CNButton
                android:id="@+id/btCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_weight="0.4"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:text="CANCEL"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/black" />

            <com.capitalnowapp.mobile.customviews.CNButton
                android:id="@+id/btLogout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_weight="0.4"
                android:background="@drawable/rounded_corner_gradient"
                android:gravity="center"
                android:text="LOGOUT"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>