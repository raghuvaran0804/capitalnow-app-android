<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_Notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_7"
    android:layout_marginEnd="@dimen/margin_10"
    app:cardCornerRadius="@dimen/margin_10">

    <LinearLayout
        android:id="@+id/llNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_10"
        android:paddingTop="@dimen/margin_15"
        android:paddingEnd="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_15">

        <ImageView
            android:id="@+id/ivNotificationIcon"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:layout_marginLeft="@dimen/margin_5"
            android:adjustViewBounds="true"
            android:src="@drawable/notification_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tv_noti_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Money Instantly"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tv_noti_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:textAppearance="@style/VerySmallText"
                android:textColor="@color/intro_page_body_color" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="5h Ago"
                android:layout_marginTop="@dimen/margin_5"
                android:textAppearance="@style/VerySmallText"
                android:textColor="@color/intro_page_body_color" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:text="@string/apply_loan"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/color_primary" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mark_read"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/color_primary" />
    </LinearLayout>


</androidx.cardview.widget.CardView>
