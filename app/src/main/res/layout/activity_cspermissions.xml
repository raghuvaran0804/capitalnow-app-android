<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kotlin.activities.CSPermissionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:rotation="180"
            android:tint="@color/Primary2"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_24"
            tools:ignore="ContentDescription,UseAppTint" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permissions"
            android:textAlignment="center"
            android:textAppearance="@style/VerySmallText"
            android:textColor="@color/black"
            android:textSize="@dimen/payu_dimen_20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="@dimen/margin_8"
                app:srcCompat="@drawable/safe_new" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvSafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:text="Your data is 100% safe"
                android:textAppearance="@style/VerySmallText"
                android:textColor="#75BD4A"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="Get the best experience with these permissions"
                android:textAppearance="@style/VerySmallText"
                android:textColor="@color/black"
                android:textSize="@dimen/payu_dimen_18sp"
                android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10"
                        app:srcCompat="@drawable/location_new" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:text="@string/location"
                            android:textAppearance="@style/MediumText"
                            android:textColor="@color/black"
                            android:textSize="@dimen/payu_dimen_14sp"
                            android:textStyle="bold" />

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_3"
                            android:paddingEnd="@dimen/margin_20"
                            android:lineHeight="@dimen/margin_15"
                            android:text="Our app collects Location Permission to determine availability of Capital Now products in your region/area, provide region specific offers and promotions; also for performing fraud and risk checks."
                            android:textAppearance="@style/VerySmallText"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10"
                        app:srcCompat="@drawable/storage_new" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:id="@+id/tvStorage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:text="@string/storage"
                            android:textAppearance="@style/MediumText"
                            android:textColor="@color/black"
                            android:textSize="@dimen/payu_dimen_14sp"
                            android:textStyle="bold" />

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_3"
                            android:paddingEnd="@dimen/margin_20"
                            android:lineHeight="@dimen/margin_15"
                            android:text="Our app require Storage Permission to enable to upload the required KYC documents for your application. This ensures a smoother application process for you."
                            android:textAppearance="@style/VerySmallText"
                            android:textColor="@color/black"
                            android:textSize="10sp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivSms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10"
                        app:srcCompat="@drawable/sms_new" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:id="@+id/tvSms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:text="@string/sms"
                            android:textAppearance="@style/MediumText"
                            android:textColor="@color/black"
                            android:textSize="@dimen/payu_dimen_14sp"
                            android:textStyle="bold" />

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_3"
                            android:lineHeight="@dimen/margin_15"
                            android:paddingEnd="@dimen/margin_20"
                            android:text="Our app collects SMS Permission to assess your profile for Capital Now products, including those offered in partnership with lending partners and other financial service providers."
                            android:textAppearance="@style/VerySmallText"
                            android:textColor="@color/black"
                            android:textSize="10sp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivCamera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10"
                        app:srcCompat="@drawable/camera_audio" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:id="@+id/tvCamers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:text="Camera &amp; Audio"
                            android:textAppearance="@style/MediumText"
                            android:textColor="@color/black"
                            android:textSize="@dimen/payu_dimen_14sp"
                            android:textStyle="bold" />

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_3"
                            android:paddingEnd="@dimen/margin_20"
                            android:lineHeight="@dimen/margin_15"
                            android:text="Our app collects Camera &amp; Audio Permission to allow you capture &amp; validate selfie for Live KYC and capture other KYC documents. This ensures that you can easily scan documents and upload them for your loan application."
                            android:textAppearance="@style/VerySmallText"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_10" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_30"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivDeviceData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10"
                        app:srcCompat="@drawable/device_data" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3"
                        android:orientation="vertical">

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:id="@+id/tvDeviceData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:text="Device Data"
                            android:textAppearance="@style/MediumText"
                            android:textColor="@color/black"
                            android:textSize="@dimen/payu_dimen_14sp"
                            android:textStyle="bold" />

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_3"
                            android:paddingEnd="@dimen/margin_20"
                            android:lineHeight="@dimen/margin_15"
                            android:text="Our app collects data related to your device, such as the OS version, phone model, IP address etc which helps us further customize and improve your experience. This data also helps us debug issues specific to devices."
                            android:textAppearance="@style/VerySmallText"
                            android:textColor="@color/black"
                            android:textSize="@dimen/margin_10" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <LinearLayout
            android:id="@+id/llTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvNext"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:orientation="horizontal">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_agree_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox"
                android:clickable="false"
                android:focusable="false" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tv_privacy_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_25"
                android:lineHeight="@dimen/payu_dimen_15dp"
                android:textAppearance="@style/VerySmallText"
                android:textColor="@color/black"
                android:textColorHighlight="#00FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="@dimen/margin_16"
            android:text="Next"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>

</LinearLayout>