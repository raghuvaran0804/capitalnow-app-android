<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_basic_back"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:rotation="180"
            android:tint="@color/Primary2"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_24"
            tools:ignore="ContentDescription,UseAppTint" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/qc_tv_basic_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/title_basic_details"
            android:textAppearance="@style/LargeTextWithBold"
            android:textColor="@color/Primary2"
            android:textStyle="bold" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:adjustViewBounds="true"
                android:alpha="0.2"
                app:srcCompat="@drawable/ic_undraw_mobile_login"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/margin_20"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:maxLines="1"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                tools:context=".kotlin.activities.BasicDetailsActivity">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_10"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/Primary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tx_et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:hint="@string/first_name"
                        android:inputType="text|textCapWords"
                        android:maxLength="100"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--<com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_middle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/Primary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tx_et_middle_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:hint="@string/middle_name"
                        android:inputType="text|textCapWords"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:maxLength="100"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null" />

                </com.google.android.material.textfield.TextInputLayout>-->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/Primary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tx_et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:hint="@string/last_name"
                        android:inputType="text|textCapWords"
                        android:maxLength="100"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="@color/Primary2">


                    <com.capitalnowapp.mobile.customviews.FreezeCursorEditText
                        android:id="@+id/tx_et_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:focusable="false"
                        android:hint="@string/date_of_birth"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:inputType="date"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/gender"
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/dark_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/rgGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/tvMale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:padding="@dimen/margin_10"
                            android:text="@string/male"
                            android:textAppearance="@style/SmallText"
                            android:textColor="@color/black" />

                        <RadioButton
                            android:id="@+id/tvFemale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_20"
                            android:gravity="center|start"
                            android:padding="@dimen/margin_10"
                            android:text="@string/female"
                            android:textAppearance="@style/SmallText"
                            android:textColor="@color/black" />
                    </RadioGroup>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Marital Status"
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/dark_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/rgMaritalStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/tvMarried"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:padding="@dimen/margin_10"
                            android:text="@string/married"
                            android:textAppearance="@style/SmallText"
                            android:textColor="@color/black" />

                        <RadioButton
                            android:id="@+id/tvSingle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_20"
                            android:gravity="center|start"
                            android:padding="@dimen/margin_10"
                            android:text="Single"
                            android:textAppearance="@style/SmallText"
                            android:textColor="@color/black" />
                    </RadioGroup>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_alter_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/Primary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tx_et_alter_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/alter_email"
                        android:inputType="textEmailAddress"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvVerifyEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:padding="5dp"
                    android:text="@string/verify_underline"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/Primary1"
                    tools:ignore="UnusedAttribute" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_alter_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/Primary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tx_et_alter_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/alter_mobile"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_select_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/Primary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tx_et_select_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/cb_ic_edit_black"
                        android:drawablePadding="@dimen/margin_20"
                        android:focusable="false"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:focusableInTouchMode="false"
                        android:hint="@string/select_native_city"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/til_alter_email" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/Primary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRecidenceType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:clickable="false"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:drawablePadding="@dimen/margin_5"
                        android:focusable="false"
                        android:hint="@string/residence_type"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/Primary2"
                    app:hintTextColor="@color/Primary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHowYouKnow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:clickable="false"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:maxLines="1"
                        android:paddingTop="@dimen/margin_25"
                        android:paddingBottom="@dimen/margin_5"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:drawablePadding="@dimen/margin_5"
                        android:focusable="false"
                        android:hint="@string/capital_now"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tv_prof_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                    android:background="@drawable/rounded_corner_gradient"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:padding="17dp"
                    android:text="@string/title_professional_details"
                    android:textAllCaps="true"
                    android:textAppearance="@style/SmallText"
                    android:textColor="@color/white"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>