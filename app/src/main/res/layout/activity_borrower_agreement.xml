<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".kotlin.activities.BorrowerAgreementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="@string/borrower_agreement_consent"
            android:textStyle="bold"
            android:textAppearance="@style/LargeTextWithBold"
            android:textColor="@color/Primary2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_white"
        android:layout_marginStart="@dimen/margin_50"
        android:layout_marginEnd="@dimen/margin_50"
        android:layout_marginTop="@dimen/margin_50"
        android:orientation="vertical">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="@string/action_required"
            android:textStyle="bold"/>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_30"
            android:textColor="@color/black"
            android:text="@string/access_code"
            android:textStyle="bold"
            android:textAppearance="@style/SmallText"/>

        <LinearLayout
            android:id="@+id/llPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvC1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/code_gradient"
                android:paddingStart="14dp"
                android:paddingTop="@dimen/margin_7"
                android:paddingEnd="14dp"
                android:paddingBottom="@dimen/margin_7"
                android:text="4"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvC2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:background="@drawable/code_gradient"
                android:paddingStart="14dp"
                android:paddingTop="@dimen/margin_7"
                android:paddingEnd="14dp"
                android:paddingBottom="@dimen/margin_7"
                android:text="4"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvC3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:background="@drawable/code_gradient"
                android:paddingStart="14dp"
                android:paddingTop="@dimen/margin_7"
                android:paddingEnd="14dp"
                android:paddingBottom="@dimen/margin_7"
                android:text="4"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:id="@+id/tvC4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:background="@drawable/code_gradient"
                android:paddingStart="14dp"
                android:paddingTop="@dimen/margin_7"
                android:paddingEnd="14dp"
                android:paddingBottom="@dimen/margin_7"
                android:text="4"
                android:textAppearance="@style/LargeTextWithBold"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvValidate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_30"
            android:layout_marginStart="@dimen/margin_50"
            android:layout_marginEnd="@dimen/margin_50"
            android:background="@drawable/rounded_corner_gradient"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:padding="17dp"
            android:text="@string/view_agree"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            tools:ignore="UnusedAttribute" />


    </LinearLayout>


</LinearLayout>