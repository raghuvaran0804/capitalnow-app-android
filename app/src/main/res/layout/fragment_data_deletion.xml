<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2FA"
    android:orientation="vertical"
    tools:context=".kotlin.fragments.DataDeletionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:background="@color/white"
        android:padding="@dimen/margin_10"
        tools:ignore="MissingConstraints">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_baseline_arrow_forward_24"
            android:drawableTint="@color/Primary2"
            android:rotation="180"
            android:textColor="@color/Primary2"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_weight="9"
            android:gravity="center_horizontal"
            android:layout_marginEnd="@dimen/margin_20"
            android:text="@string/data_deletion"
            android:textAppearance="@style/LargeTextWithBold"
            android:textColor="@color/cb_errorRed"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--View1-->

            <LinearLayout
                android:id="@+id/llView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:visibility="gone">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineHeight="@dimen/margin_25"
                    android:padding="@dimen/margin_8"
                    android:text="You are about to begin your account deletion process."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineHeight="@dimen/margin_25"
                    android:padding="@dimen/margin_8"
                    android:text="Remember:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:lineHeight="22dp"
                    android:text="@string/data_deletion_text"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineHeight="@dimen/margin_25"
                    android:padding="@dimen/margin_8"
                    android:layout_marginStart="@dimen/margin_8"
                    android:text="Account Deletion Reason"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/margin_32"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="16dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:focusable="false"
                    android:hint="Select Reason"
                    android:inputType="text|textCapWords"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingEnd="0dp"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/payu_dimen_14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <!--HaveLoan-->

            <LinearLayout
                android:id="@+id/llHaveLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_16"
                    android:src="@drawable/delete_account_confirm"/>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/margin_16"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:lineHeight="@dimen/payu_dimen_22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Sorry, your account deletion request canâ€™t be processed at this time."/>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_32"
                    android:textSize="@dimen/payu_dimen_16sp"
                    android:lineHeight="@dimen/payu_dimen_22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="To delete your account:"/>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:lineHeight="25dp"
                    android:text="@string/close_active_loan_todelete"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <!--SendOtp-->

            <LinearLayout
                android:id="@+id/llSendOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-16dp"
                    android:src="@drawable/delete_your_account_bg"/>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineHeight="@dimen/margin_25"
                    android:padding="@dimen/margin_16"
                    android:text="Mobile Number"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Mobile No"
                    android:maxLines="1"
                    android:layout_marginStart="@dimen/margin_32"
                    android:layout_marginEnd="@dimen/margin_32"
                    android:paddingTop="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_18sp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:clickable="false"
                    android:focusable="false"
                    android:editable="false"
                    android:drawableLeft="@drawable/mobile_phone_new"
                    android:drawablePadding="@dimen/margin_16"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <!--VerifyOtp-->

            <LinearLayout
                android:id="@+id/llVerifyOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-16dp"
                    android:src="@drawable/delete_your_account_bg"/>

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvMobileText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineHeight="@dimen/margin_25"
                    android:padding="@dimen/margin_16"
                    android:text="We just sent a OTP to your mobile number 899999999"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.capitalnowapp.mobile.customviews.CNEditText
                    android:id="@+id/etOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter OTP"
                    android:maxLines="1"
                    android:paddingTop="@dimen/margin_5"
                    android:textSize="@dimen/payu_dimen_14sp"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="@dimen/margin_16"
                    android:layout_marginStart="@dimen/margin_32"
                    android:layout_marginEnd="@dimen/margin_32"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:textColor="@color/dark_gray"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@null"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/til_company_name"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvHaveLoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_32"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="@dimen/margin_16"
            android:text="OKAY"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:ignore="UnusedAttribute" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_32"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="@dimen/margin_16"
            android:text="Continue"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:ignore="UnusedAttribute" />

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvSendOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_32"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="@dimen/margin_16"
            android:text="Send OTP"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:ignore="UnusedAttribute" />
        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvVerifyOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_32"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:padding="@dimen/margin_16"
            android:text="Continue"
            android:textAllCaps="true"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>


</LinearLayout>