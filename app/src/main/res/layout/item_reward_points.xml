<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".kotlin.fragments.ActiveLoansFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_3"
        android:layout_marginEnd="@dimen/margin_3"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/margin_3"
        app:cardMaxElevation="@dimen/margin_3"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llData"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_50"
                    android:layout_weight="1.5"
                    android:textAppearance="@style/MediumText"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="32dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/rewards_badge"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_5">

                    <ImageView
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_5"
                        android:adjustViewBounds="true"
                        android:src="@drawable/rewards_star"
                        android:visibility="gone"
                        app:tint="@color/black" />

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:gravity="center"
                        android:text="500 \nPoints"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:adjustViewBounds="true" />

                <com.capitalnowapp.mobile.customviews.CNTextView
                    android:id="@+id/tvDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:background="@drawable/single_rounded_square"
                    android:backgroundTint="@color/Primary2"
                    android:gravity="center"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingEnd="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="Details >"
                    android:textAppearance="@style/VerySmallText"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>