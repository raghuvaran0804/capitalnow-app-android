<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/margin_25"
    android:layout_marginEnd="@dimen/margin_25"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_profile_bg"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="20sp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cross"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_gravity="right"/>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivUserPic"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:gravity="center"
            android:src="@drawable/ic_camera"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_30"
        android:orientation="vertical">


        <com.capitalnowapp.mobile.customviews.CNButton
            android:id="@+id/btnTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_gravity="center"
            android:background="@drawable/button_border"
            android:drawableLeft="@drawable/ic_profile_cam"
            android:paddingLeft="@dimen/margin_40"
            android:paddingRight="54dp"
            android:text="  Open Camera"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/colorBlackShade1" />


        <com.capitalnowapp.mobile.customviews.CNButton
            android:id="@+id/btnGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_gravity="center"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/Primary2"
            android:drawableLeft="@drawable/ic_profile_gallery"
            android:paddingLeft="@dimen/margin_40"
            android:paddingRight="@dimen/payu_dimen_60dp"
            android:text="  Open Gallery"
            android:textAppearance="@style/SmallText"
            android:textColor="@color/Primary2" />
    </LinearLayout>

    </LinearLayout>
</FrameLayout>