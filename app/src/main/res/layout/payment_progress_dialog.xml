<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@drawable/payment_progress"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/thanks_payment"
            android:textColor="@color/Primary2"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relax_text"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginEnd="@dimen/margin_30"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_gravity="center"
            android:lineHeight="@dimen/margin_20"
            android:textSize="14sp"
            android:textColor="#5f5f6f"/>

        <com.capitalnowapp.mobile.customviews.CNTextView
            android:id="@+id/tvOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_gradient"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:paddingStart="@dimen/margin_25"
            android:paddingTop="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_25"
            android:paddingBottom="@dimen/margin_10"
            android:text="Got it"
            android:textAllCaps="true"
            android:textAppearance="@style/VerySmallText"
            android:textColor="@color/white"
            android:visibility="visible" />

    </LinearLayout>
</FrameLayout>