<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.fragments.ContactUsNewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <com.capitalnowapp.mobile.customviews.CNTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center"
                android:text="Talk To Our Finance Experts"
                android:textAppearance="@style/ExtraLargeTextWithBold"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/payu_dimen_20dp"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/Primary2"
                        app:hintTextColor="@color/Primary2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                            android:editable="true"
                            android:focusable="true"
                            android:hint="Your Name"
                            android:inputType="text|textCapWords"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingTop="@dimen/margin_20"
                            android:paddingEnd="0dp"
                            android:paddingBottom="@dimen/margin_5"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textCursorDrawable="@null" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/Primary2"
                        app:hintTextColor="@color/Primary2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:editable="true"
                            android:focusable="true"
                            android:hint="Mobile Number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingTop="@dimen/margin_20"
                            android:paddingEnd="0dp"
                            android:paddingBottom="@dimen/margin_5"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textCursorDrawable="@null" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/Primary2"
                        app:hintTextColor="@color/Primary2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:editable="true"
                            android:focusable="true"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:maxLength="50"
                            android:paddingStart="10dp"
                            android:paddingTop="@dimen/margin_20"
                            android:paddingEnd="0dp"
                            android:paddingBottom="@dimen/margin_5"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textCursorDrawable="@null" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/spinnerQuery"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_20"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:contentDescription="Query"
                        android:textCursorDrawable="@null" />

                    <Spinner
                        android:id="@+id/spinnerSubQuery"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_20"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:contentDescription="Sub Query"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textCursorDrawable="@null" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:hint="Enter Your Message"
                        android:padding="@dimen/margin_10"
                        app:counterEnabled="true"
                        app:counterMaxLength="250">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMessage"
                            style="@android:style/TextAppearance.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="@dimen/margin_20"
                            android:background="@drawable/rectangle_border_rounded_black"
                            android:gravity="top"
                            android:textColorHint="@color/transparent"
                            android:inputType="textMultiLine"
                            android:maxLength="250"
                            android:padding="@dimen/margin_10"
                            android:textCursorDrawable="@null" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:gravity="start"
                        android:paddingStart="@dimen/margin_16"
                        android:paddingEnd="@dimen/margin_16"
                        android:text="Upload Relevant Attachments (if any)"
                        android:textAppearance="@style/VerySmallText"
                        android:textSize="@dimen/payu_dimen_12sp"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:id="@+id/llAttachments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/ic_upload_doc_up" />


                            <ImageView
                                android:id="@+id/iv2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="@dimen/margin_10"
                                android:src="@drawable/ic_upload_doc_up" />

                            <ImageView
                                android:id="@+id/iv3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="@dimen/margin_10"
                                android:src="@drawable/ic_upload_doc_up" />
                        </LinearLayout>

                        <com.capitalnowapp.mobile.customviews.CNTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:gravity="start"
                            android:layout_marginTop="@dimen/payu_dimen_16dp"
                            android:paddingStart="@dimen/margin_16"
                            android:paddingEnd="@dimen/margin_16"
                            android:text="@string/contactus_note_text"
                            android:lineHeight="@dimen/payu_dimen_14dp"
                            android:textAppearance="@style/VerySmallText"
                            android:textSize="10sp"
                            android:textColor="@color/cb_errorRed" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <com.capitalnowapp.mobile.customviews.CNTextView
                        android:id="@+id/tvSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_marginBottom="@dimen/margin_15"
                        android:background="@drawable/rounded_corner_gradient"
                        android:gravity="center"
                        android:padding="17dp"
                        android:text="Submit"
                        android:textAllCaps="true"
                        android:textAppearance="@style/SmallText"
                        android:textColor="@color/white"
                        tools:ignore="UnusedAttribute" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>