<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/Primary2"
                android:type="linear"
                android:centerColor="@color/Primary2"
                android:startColor="@color/Primary2" /> <!-- Background color -->
            <corners android:radius="6dp" /> <!-- Corner radius, adjust as needed -->
        </shape>
    </item>
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Border color -->
            <corners android:radius="6dp" /> <!-- Corner radius, adjust as needed -->
        </shape>
    </item>
</layer-list>